WindowManager:
    LoginWindow:  # 2
    ShareOffWindow:
    ShareOnWindow:
    MainWindow:

<LoginWindow>:
    name: 'login'
    studentid: StudentID
    password: Password

    FloatLayout:

        Label:
            pos_hint: {'x':0.2, 'y':0.8}
            size_hint: 0.6, 0.1
            text:'WELCOME'
            color: 0.3,0.6,0.7,1

        Label:
            pos_hint: {'x':0.1, 'y':0.6}
            size_hint: 0.3, 0.1
            text:'StudentID'

        TextInput:
            pos_hint: {'x':0.4, 'y':0.6}
            size_hint: 0.5, 0.1
            id: StudentID
            multiline: False

        Label:
            pos_hint: {'x':0.1, 'y':0.5}
            size_hint: 0.3, 0.1
            text: 'Password'

        TextInput:
            pos_hint: {'x':0.4, 'y':0.5}
            size_hint: 0.5, 0.1
            id: Password
            multiline: False

        Button:
            pos_hint: {'x':0.3, 'y':0.2}
            size_hint: 0.4, 0.1
            text:'Login'
            background_color: 0.3,0.4,0.5,1
            on_release:
                root.btn()
                app.root.current = 'shareoff'
                root.manager.transition.direction = 'up'

<ShareOffWindow>:
    name:'shareoff'

    ImageButton:
        source: 'off.png'
        size_hint: 0.4, 0.1
        pos_hint: {'x': 0.05, 'y': 0.85}
        on_release:
            app.root.current = 'shareon'


    ImageButton:
        source: 'mybike.png'
        size_hint: 0.6, 0.2
        pos_hint: {'x':0.2, 'y':0.4}
        on_release:
            app.root.current = 'main'
    FloatLayout:
        Button:
            pos_hint: {'x':0.2, 'y':0.2}
            size_hint: 0.6, 0.1
            text:'park bike'
            background_color: 0.3,0.4,0.5,1

<ShareOnWindow>:
    name:'shareon'

    ImageButton:
        source: 'on.png'
        size_hint: 0.1, 0.1
        pos_hint: {'x': 0.05, 'y': 0.85}
        on_release:
            app.root.current = 'shareoff'

    FloatLayout:

        Button:
            pos_hint: {'x':0.2, 'y':0.4}
            size_hint: 0.6, 0.1
            text:'About Me'
            background_color: 0.3,0.4,0.5,1

        Button:
            pos_hint: {'x':0.2, 'y':0.4}
            size_hint: 0.6, 0.1
            text:'Borrow Bike'
            background_color: 0.3,0.4,0.5,1

        Button:
            pos_hint: {'x':0.2, 'y':0.6}
            size_hint: 0.6, 0.1
            text:'Park My Bike'
            background_color: 0.3,0.4,0.5,1

        Button:
            pos_hint: {'x':0.2, 'y':0.8}
            size_hint: 0.6, 0.1
            text:'Find My Bike'
            background_color: 0.3,0.4,0.5,1

        Button:
            pos_hint: {'x':0.6, 'y':0.1}
            size_hint: 0.3, 0.1
            text:'Back'
            background_color: 0.3,0.4,0.5,1


<MainWindow>:
    name:'main'

    FloatLayout:

        Button:
            pos_hint: {'x':0.2, 'y':0.4}
            size_hint: 0.6, 0.1
            text:'About Me'
            background_color: 0.3,0.4,0.5,1

        Button:
            pos_hint: {'x':0.2, 'y':0.6}
            size_hint: 0.6, 0.1
            text:'Park My Bike'
            background_color: 0.3,0.4,0.5,1

        Button:
            pos_hint: {'x':0.2, 'y':0.8}
            size_hint: 0.6, 0.1
            text:'Find My Bike'
            background_color: 0.3,0.4,0.5,1

        Button:
            pos_hint: {'x':0.6, 'y':0.1}
            size_hint: 0.3, 0.1
            text:'Back'
            background_color: 0.3,0.4,0.5,1